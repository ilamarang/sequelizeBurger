<div class='row'>


<div class='col-md-4 col-md-offset-2'>

    {{#each burger}}
    {{#unless devoured}}
    <div class = 'row'>
      <form action="/{{this.id}}?_method=PUT" method="POST">
      <h3> {{nonDevouredCounter}})  {{burger_name }} <button type='submit' class='btn btn-primary' name={{id}}> Devour it</button> </h3>
      </form>

    </div>


    {{/unless}}
      {{/each}}


</div>


<div class='col-md-2 col-md-offset-2'>

    {{#each burger}}
     {{#if devoured}}
     <div class = 'row'>

       <h3 class='devouredBurgers'>{{devouredCounter}})  {{burger_name }}  </h3>
     </div>

      {{/if}}
      {{/each}}


</div>
</div>
